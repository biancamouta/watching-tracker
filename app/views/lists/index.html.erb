<p id="notice"><%= notice %></p>

<div class="box2">
<h2>My Lists</h2>

<table>
  <tbody>
  
    <% @lists.each do |list| %>
      <tr>
        <td><h4><%= list.nome %></h4></td>    
        <td><%= link_to 'Show', list , class: "btn btn-default btn-sm"%></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: "btn btn-default btn-sm"%></td>
        <td><%= link_to 'Delete', list, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<td><%= link_to "New List", new_list_path , class: "btn btn-default" %></td>

</div>
