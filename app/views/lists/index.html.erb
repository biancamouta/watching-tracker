<p id="notice"><%= notice %></p>

<div class="box2">
<h3>Minhas Listas</h3>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.nome %></td>
        <td><%= link_to 'Show', list , class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_list_path(list), class: "btn btn-default"%></td>
        <td><%= link_to 'Delete', list, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<td><%= link_to "Nova Lista", new_list_path , class: "btn btn-default" %></td>

</div>
